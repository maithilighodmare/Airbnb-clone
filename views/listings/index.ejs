<% layout("/layout/boilerplate.ejs") %>
<div class="main">
    <h1>All listings</h1>
    <div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-1  "> 
     <% for (let listing of allListings) { %>
      <a href="/listings/<%= listing._id %>" 
        class="listing-link">
        <div class="card column">
            <img 
                src="<%= listing.image %>"
                 class="card-img-top" alt={listing.title}
                 style="height: 20rem;"
                 />
                 <div class="card-img-overlay">abcs</div>
            <div class="card-body">
                <p class="card-text">
                   <b> <%= listing.title %></b>
                    <br>
                    &#8377; <%=  listing.price.toLocaleString("en-IN") %> /nigth
                </p>
            </div>
        </div>
        <% } %> 
      </div>   
    </div> 

   
   
